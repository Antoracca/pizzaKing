{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "ES2020"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "../packages/shared/src/contexts/**/*",
    "../packages/shared/src/hooks/**/*",
    "../packages/shared/src/components/**/*",
    "**/*.tsx"
  ]
}
